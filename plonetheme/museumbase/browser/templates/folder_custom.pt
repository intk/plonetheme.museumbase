<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plonelocales">

<body>

<metal:content-core fill-slot="content-core">

<div class="tileColumns container-fluid">
  <div class="row-fluid">
  <metal:block use-macro="context/folder_listing/macros/content-core">
      <metal:entries fill-slot="entries">
      <metal:block use-macro="context/folder_listing/macros/entries">
      <metal:entry fill-slot="entry">

          <tal:entry_details
            tal:define="collection_id context/UID;
                        item_obj python:item.getObject();
                        item_index repeat/item/index;
                        number repeat/item/number;
                        lead_image python:view.getImageObject(item);
                        portal_type context/portal_type;
                        item_title item/Title;
                        has_media nocall:item/leadMedia;
                        item_is_buyable python:view.isBuyable(item_obj);
                        item_href python: view.getItemURL(item, item_url);">

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" metal:define-macro="listitem">
                <div tal:attributes="class python:'thumbnail product' if item_is_buyable else 'thumbnail'">
                  <div class="thumb-wrapper">

                    <a tal:condition="python: (has_media != None or item_type == 'Image') and lead_image != None" href="" tal:attributes="href python: item_url+'?collection_id='+collection_id+'&b_start='+str(b_start+item_index) if portal_type == 'Collection' and item_type == 'Object' else item_url; class python:'thumb-image product' if item_is_buyable else 'thumb-image';"
                      >

                      <tal:has_image tal:condition="nocall:lead_image">
                      <img tal:define="images_src python:lead_image;
                                         "
                             src="" alt=""
                             tal:attributes="src images_src; class python:'tileImage product' if item_is_buyable else 'tileImage'; alt item_title; title item_title;" /> 
                      </tal:has_image>
                    </a>   
                          
                  </div>
                  <div class="caption">
                    <h3><a href="#"
                         tal:attributes="href python: item_href+'?collection_id='+collection_id+'&b_start='+str(b_start+item_index) if portal_type == 'Collection' and item_type == 'Object' else item_href; class python: item_wf_state_class+' product' if item_is_buyable else item_wf_state_class;"
                         tal:content="item_title"
                         >Title
                        </a>
                    </h3>
                    <p tal:condition="item_description">
                      <span tal:content="python: view.trimText(item_description, 200, strip=False)"></span>
                    </p>

                    <p tal:condition="python: item_type in ['Event', 'Exhibition', 'BookableEvent', 'Bookable Event']" class="item-dates">
                      <tal:restrict tal:condition="python: item.start != None and item.end != None">
                    <tal:differentday tal:condition="python:not item.start.Date() == item.end.Date()" i18n:translate="event_when_differentday">
                      <abbr i18n:name="startdate">
                        <span tal:replace="python: toLocalizedTime(item.start.strftime('%d %B %Y'))">Start Date</span>
                        <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                      </abbr>
                      t/m
                      <span i18n:name="linebreak" />
                      <abbr i18n:name="enddate">
                        <span tal:replace="python: toLocalizedTime(item.end.strftime('%d %B %Y'))">End Date</span>
                        <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                      </abbr>
                    </tal:differentday>

                    <tal:sameday tal:condition="python:item.start.Date() == item.end.Date()" i18n:translate="event_when_sameday">
                      <span tal:replace="python: toLocalizedTime(item.start.strftime('%d %B %Y'))" i18n:name="date">Start Date Time</span>,
                      <abbr i18n:name="starttime">
                        <span tal:content="python:toLocalizedTime(item.start, time_only=1)">Start Time</span>
                      </abbr >
                      -
                      <abbr i18n:name="endtime">
                         <span tal:content="python:toLocalizedTime(item.end, time_only=1)">End Time</span>
                      </abbr>
                    </tal:sameday>
                  </tal:restrict>
                  </p>

                  <p tal:condition="item_is_buyable">
                      <tal:buyable-info tal:define="price python:view.getPrice(item_obj)" tal:condition="python: price != None">
                        <span class="item-prices">â‚¬ <span tal:replace="python: '%0.2f' % price"></span></span>
                      </tal:buyable-info>
                    </p>
                    

                  </div>
              </div>
            </div>

            <tal:clearfix condition="python: number % 3 == 0">
              <div class="clearfix visible-lg visible-md"></div>
            </tal:clearfix> 

            <tal:clearfixmd condition="python: number % 2 == 0">
              <div class="clearfix visible-sm"></div>
            </tal:clearfixmd>

        </tal:entry_details>
      </metal:entry>
      </metal:block>
      </metal:entries>

  </metal:block>
</div>
</div>
</metal:content-core>

</body>
</html>
