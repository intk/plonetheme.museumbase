<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="content-core">

<div class="tileColumns container-fluid">
  <div class="row-fluid">
  <metal:block use-macro="context/folder_listing/macros/content-core">
      <metal:entries fill-slot="entries">
      <metal:block use-macro="context/folder_listing/macros/entries">
      <metal:entry fill-slot="entry">

          <tal:entry_details
            tal:define="collection_id context/UID;
                        item_index repeat/item/index;
                        number repeat/item/number;
                        lead_image python:view.getImageObject(item);
                        portal_type context/portal_type;
                        item_title item/Title;
                        has_media item/leadMedia;">


            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" metal:define-macro="listitem">
                <div class="thumbnail">
                  <div class="thumb-wrapper">
                    <a class="thumb-image" tal:condition="python: (has_media != None or item_type == 'Image') and lead_image != None" href="" tal:attributes="href python: item_url+'?collection_id='+collection_id+'&b_start='+str(b_start+item_index) if portal_type == 'Collection' and item_type == 'Object' else item_url"
                      >

                      <img tal:define="images lead_image/@@images;
                                      scale python: images.scale('image', scale='mini')"
                             tal:condition="scale"
                             tal:replace="structure python: scale.tag(css_class='tileImage', alt=item_title, title=item_title)" />
                    </a>   
                          
                  </div>
                  <div class="caption">
                    <h3><a href="#"
                         tal:attributes="href python: item_url+'?collection_id='+collection_id+'&b_start='+str(b_start+item_index) if portal_type == 'Collection' and item_type == 'Object' else item_url; class item_wf_state_class"
                         tal:content="item_title"
                         >Title
                        </a>
                    </h3>
                    <p tal:condition="item_description">
                      <span tal:content="item_description"></span>  
                    </p>
                  </div>
              </div>
            </div>

            <tal:clearfix condition="python: number % 3 == 0">
              <div class="clearfix visible-lg visible-md"></div>
            </tal:clearfix> 

            <tal:clearfixmd condition="python: number % 2 == 0">
              <div class="clearfix visible-sm"></div>
            </tal:clearfixmd>

        </tal:entry_details>
      </metal:entry>
      </metal:block>
      </metal:entries>

  </metal:block>
</div>
</div>
</metal:content-core>

</body>
</html>
