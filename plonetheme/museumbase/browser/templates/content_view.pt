<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

  <metal:title fill-slot="content-title">
    <tal:isnotproduct condition="python: context.portal_type != 'product'">
      <h1 metal:use-macro="context/kss_generic_macros/macros/generic_title_view"></h1>
    </tal:isnotproduct>
  </metal:title>


  <metal:description fill-slot="content-description">
    <tal:isnotproduct condition="python: context.portal_type != 'product'">
      <div metal:use-macro="context/kss_generic_macros/macros/generic_description_view"></div>
    </tal:isnotproduct>
  </metal:description>

<metal:content-core fill-slot="content-core">
    
    <metal:content-core define-macro="content-core">
          <div id="parent-fieldname-text-dates" tal:condition="python: context.portal_type in ['Event', 'Exhibition']" tal:define="toLocalizedTime nocall:plone_view/toLocalizedTime;">
            <p>
            
            <tal:restrict tal:condition="python: getattr(context, 'start', None) != None and getattr(context, 'end', None) != None" i18n:domain="plonelocales">
              <tal:differentday tal:condition="python:not context.start.Date() == context.end.Date()" i18n:translate="event_when_differentday">
                <abbr i18n:name="startdate">
                  <span tal:replace="python: toLocalizedTime(context.start.strftime('%d %B %Y'))">Start Date</span>
                  <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                </abbr>
                to
                <span i18n:name="linebreak" />
                <abbr i18n:name="enddate">
                  <span tal:replace="python: toLocalizedTime(context.end.strftime('%d %B %Y'))">End Date</span>
                  <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                </abbr>
                
              </tal:differentday>

              <tal:sameday tal:condition="python:context.start.Date() == context.end.Date()" i18n:translate="event_when_sameday">
                <span tal:replace="python: toLocalizedTime(context.start.strftime('%d %B %Y'))" i18n:name="date">Start Date Time</span>
                <span i18n:name="linebreak" />
                ,
                <abbr i18n:name="starttime">
                  <span tal:content="python: toLocalizedTime(context.start, time_only=1)">Start Time</span>
                </abbr >
                -
                <abbr i18n:name="endtime">
                   <span tal:content="python:toLocalizedTime(context.end, time_only=1)">End Time</span>
                </abbr>

              </tal:sameday>
            </tal:restrict>
            </p>

        </div>

        <div id="parent-fieldname-text-details" tal:condition="python: context.portal_type == 'product'">
          <h2 tal:content="context/Title"></h2>
          <p tal:content="context/Description"></p>
        </div>

        <div id="parent-fieldname-text"
             tal:condition="context/text"
              tal:content="structure python:context.text.output_relative_to(view.context)" />


        
        
    </metal:content-core>
</metal:content-core>

</body>
</html>
