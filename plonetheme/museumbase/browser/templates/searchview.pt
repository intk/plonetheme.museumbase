<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="plone">

  <head>
    <metal:block metal:fill-slot="head_slot">

      <link rel="alternate" title="RSS 1.0" type="application/rss+xml"
        tal:define="here_url context/@@plone_context_state/object_url;"
        tal:condition="request/SearchableText|nothing"
        tal:attributes="href string:$here_url/search_rss?${request/QUERY_STRING}"/>

      <link rel="home" title="Home" tal:attributes="href view/navroot_url" />

    </metal:block>

    <metal:block fill-slot="top_slot"
       tal:define="dummy python:request.set('disable_border',1);
       disable_column_one python:request.set('disable_plone.leftcolumn',1);
       disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
    </head>

    <body>

      <div id="content-core" metal:fill-slot="main">

        <form name="searchform"
          action="@@search"
          class="searchPage enableAutoFocus"
          tal:define="portal context/@@plone_portal_state/portal;
            first_call not:request/advanced_search|nothing;
            st python:request.get('SearchableText', '');
            DateTime python:modules['DateTime'].DateTime;
            b_start python:0;
            b_start request/b_start | b_start;
            batch python: view.results(b_start=b_start);
            batch_size batch/sequence_length|string:0;
            ">

          <div id="search-page-header">

              <h1 class="documentFirstHeading"
                i18n:translate=""
                tal:condition="st">
                Search results</h1>

              <h1 class="documentFirstHeading"
                i18n:translate=""
                tal:condition="not:st">
                Search results</h1>


                <h2 class="documentDescription" i18n:translate="">
                  <span i18n:translate="batch_x_items_matching_your_criteria">
                    <span i18n:name="number" id="search-results-number"
                      tal:content="batch/sequence_length|string:0">
                      234</span> items matching your search terms.</span>
                    <span id="search-term" tal:content="st" i18n:name="term">
                        Search Term
                    </span>
                </h2>

                <fieldset id="search-field" i18n:domain="plone" class="noborder">
                  <div class="row-fluid" id="fieldscontainer">
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6" id="search_input_div">
                      <input class="searchPage searchButton"
                       name="SearchableText"
                       type="text"
                       size="25"
                       id="search_input"
                       title="Search Site"
                       placeholder="Search site"
                       i18n:attributes="title title_search_title; placeholder title_search_title"
                       tal:attributes="value st;"
                       />
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6" id="submit_search_div">
                        <input class="searchPage searchButton allowMultiSubmit btn btn-inverse"
                          type="submit"
                          value="Search"
                          i18n:attributes="value label_search;"/>
                    </div>

                    <tal:advanced_search_query tal:define="advanced_query python: view.getAdvancedButtonQuery()">
                    <a class="advanced-search"tal:attributes="href python: context.absolute_url()+'/@@advancedsearch'" i18n:translate="label_advanced_search">Advanced search</a>
                    </tal:advanced_search_query>

                  </div>
                </fieldset>
            </div> <!-- Search page header -->

            <div class="clearfix"></div> 

            <div class="container-fluid">

              <div id="search-results-wrapper" class="row-fluid"
                         tal:define="normalizeString nocall:context/@@plone/normalizeString;">


                         <div class="clearfix"></div> 


                         <!-- RESULTS BAR -->
                         <div id="search-results-bar">
                          <dl class="actionMenu activated"
                            tal:attributes="class python:view.show_advanced_search() and 'actionMenu activated' or 'actionMenu deactivated'">

                            <dt class="actionMenuHeader">
                              <a href="#"
                               tal:attributes="href view/advanced_search_trigger"
                               id="search-filter-toggle"
                               i18n:translate="narrow_search_options">
                               Filter the results.
                             </a>
                           </dt>


                           <dd class="actionMenuContent">
                            <div id="search-filter" i18n:domain="plone">

                              <fieldset class="noborder">

                                <tal:en tal:condition="python: context.language == 'en'">
                                  <legend i18n:translate="">Refine</legend>
                                </tal:en>
                                
                                <tal:nl tal:condition="python: context.language == 'nl'">
                                  <legend i18n:translate="">Verfijnen</legend>
                                </tal:nl>

                                
                                
                                <div class="images-only-filter"
                                  tal:define="images_checked python: request.get('hasMedia', None) == True">
                                  <input type="checkbox" name="hasMedia:boolean" value="False" id="images-only-filter"
                                    tal:attributes="checked python: images_checked"/>
                                  
                                  <label for="images-only-filter" tal:condition="python: context.language == 'en'">Images only</label>
                                  <label for="images-only-filter" tal:condition="python: context.language == 'nl'">Alleen met beeld</label>
                                  
                                 </div>

                                <div class="field"
                                 tal:define="portal_types portal/portal_types;
                                 searchfilters view/getSearchFilters;
                                 types_list view/types_list;
                                 all_checked python:(len(searchfilters) == len(request.get('path', [])));
                                 toggle_select_state python:all_checked and 'true' or 'false';">

                                 <div class="formHelp" ></div>

                                 <span class="optionsToggle">
                                  <input type="checkbox"
                                   onchange=""
                                   name="pt_toggle"
                                   value="#"
                                   id="pt_toggle"
                                   class="noborder"
                                   checked=""
                                   tal:attributes="checked python:all_checked and 'checked' or '';
                                   onchange string:javascript:toggleSelect(this, 'path:list', ${toggle_select_state});"/>

                                   <tal:en tal:condition="python: context.language == 'en'">
                                     <label for="pt_toggle"
                                       i18n:translate=""
                                       >Only in the collection
                                     </label>
                                    </tal:en>

                                    <tal:nl tal:condition="python: context.language == 'nl'">
                                      <label for="pt_toggle"
                                       i18n:translate=""
                                       >Alleen in de collectie
                                     </label>
                                    </tal:nl>

                                   
                                 </span>
                                 <br />

                                 
                                 <br/>

                                 <div style="float:left; margin-right: 2em;" tal:define="ever string:1970-01-02">
                                  <tal:items repeat="filter searchfilters">
                                    <input type="checkbox" name="path:list" checked="checked" tal:attributes="value filter/path;
                                      id string:folder_${filter/name};
                                      checked python:((filter.get('path') in request.get('path', []))) and 'checked' or '';"/>
                                      <label for=""
                                        tal:attributes="for string:folder_${filter/name}"
                                        tal:content="filter/name"
                                        />
                                        <br/>
                                      </tal:items>

                                      <input type="checkbox" id="search-checkbox-advanced_search" checked="checked" name="advanced_search" value="True" />
                                      <input type="hidden" name="sort_on" value="" />

                                      <input type="radio"
                                       id="query-date-ever"
                                       name="created.query:record:list:date"
                                       checked="checked"
                                       tal:attributes="value ever"
                                       style="display:none"
                                       />
                                     </div>
                                     <div class="visualClear"><!-- --></div>
                                </div>





                                 </fieldset>
                               </div>
                             </dd>

                           </dl>
                           <div class="clearfix visible-xs"></div>

                           <span id="searchResultsSort">
                            <span i18n:translate="sort_by">Sort by</span>
                            <span id="sorting-options">
                              <metal:sorting define-macro="sorting">
                                <tal:block repeat="item view/sort_options">
                                  <tal:item define="selected item/selected">
                                    <a data-sort=""
                                     tal:condition="not:selected"
                                     tal:content="item/title"
                                     tal:attributes="href item/url;
                                     data-sort python:item.sortkey and item.sortkey or None"></a>
                                     <strong tal:condition="selected" tal:content="item/title"></strong>
                                     <span tal:condition="not:repeat/item/end">&middot;</span>
                                   </tal:item>
                                 </tal:block>
                               </metal:sorting>
                             </span>
                           </span>
                            
                            <div class="clearfix extra-fields" i18n:domain="collective.object">
                            <tal:define_extra
                              tal:define="extra_filters python: view.getExtraFilters()">
                              <p tal:condition="extra_filters" tal:content="python: 'Verfijnen: ' if getattr(context, 'language', None) == 'nl' else 'Refine: '"></p>
                              <tal:items repeat="extra_filter extra_filters">
                                <p i18n:translate=""><span i18n:translate="" tal:content="python: extra_filter['param']"></span>: <span tal:content="python: extra_filter['value']"></span><span> <a tal:attributes="href python: extra_filter['link']" class="glyphicon glyphicon-remove extra-filter-remove"></a></span></p>
                              </tal:items>
                            </tal:define_extra>
                            </div>
                           
                         </div> 

                         <div class="clearfix"></div>

                         <metal:searchresults define-macro="search_results">

                          <div id="search-results"
                           tal:define="navigation_root_url context/@@plone_portal_state/navigation_root_url;">

                           <metal:noresults tal:condition="not: batch">
                            <p i18n:domain="plone" class="no-results"><strong i18n:translate="description_no_results_found" class="no-results">No results were found.</strong></p>
                          </metal:noresults>

                          <metal:results tal:condition="batch"
                           tal:define="isAnon context/@@plone_portal_state/anonymous;
                           toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                           site_properties context/portal_properties/site_properties;
                           use_view_action site_properties/typesUseViewActionInListings|python:();
                           allowAnonymousViewAbout site_properties/allowAnonymousViewAbout;
                           show_about python:not isAnon or allowAnonymousViewAbout;
                           user_admin python: view.checkUserPermission();">

                           <div class="searchResults row-fluid">
                            <div class="col-lg-8 results-wrapper">
                              <tal:results repeat="item batch">

                                <tal:block tal:define="item_id item/getId;
                                 normalizeString nocall:context/@@plone/normalizeString;
                                 item_description item/Description;
                                 item_type item/Type;
                                 item_title python: view.getItemTitle(item) if user_admin else item.Title();
                                 item_url item/getURL;
                                 item_has_media python: getattr(item, 'leadMedia', None);
                                 item_created item/CreationDate;
                                 item_icon item/getIcon;
                                 item_wf_state_class python:'state-' + normalizeString(item.review_state);
                                 item_creator item/Creator;
                                 hide_book python: 'bibliotheek' in item_url and user_admin == False;
                                 item_link item/getURL">
                                 
                                 <metal:block define-slot="entry" tal:condition="not:hide_book">

                                  <div class="col-lg-4 col-md-4 col-sm-5">
                                    <a class="imagelink" tal:condition="item_has_media" href="" tal:attributes="href item_link"><tal:image replace="structure python:view.getLeadMediaTag(item, scale='mini')"></tal:image></a>
                                  </div>

                                  <div class="res-info col-lg-8 col-md-8 col-sm-7">

                                    <h2 class="summary"  tal:attributes="class python: 'summary %s'%item_wf_state_class">
                                      <a href="#"
                                       tal:attributes="href item_link"
                                       tal:content="item_title">
                                       Item Title
                                     </a>
                                   </h2>
                                   
                                   <p tal:condition="python: item_type in ['Event', 'Exhibition']" class="item-dates">

                                      <tal:restrict tal:condition="python: str(item.start) != '' and str(item.end) != '' and item.start != None and item.end != None" i18n:domain="plonelocales">
                                        <tal:differentday tal:condition="python:not item.start.Date() == item.end.Date()" i18n:translate="event_when_differentday">
                                          <abbr i18n:name="startdate">
                                            <span tal:replace="python: toLocalizedTime(item.start.strftime('%d %B %Y'))">Start Date</span>
                                            <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                                          </abbr>
                                          t/m
                                          <span i18n:name="linebreak" />
                                          <abbr i18n:name="enddate">
                                            <span tal:replace="python: toLocalizedTime(item.end.strftime('%d %B %Y'))">End Date</span>
                                            <tal:word i18n:translate="event_when_differentday_optional_word_between_date_and_time" />
                                          </abbr>
                                        </tal:differentday>

                                        <tal:sameday tal:condition="python:item.start.Date() == item.end.Date()" i18n:translate="event_when_sameday">
                                          <span tal:replace="python: toLocalizedTime(item.start.strftime('%d %B %Y'))" i18n:name="date">Start Date Time</span>,
                                          <abbr i18n:name="starttime">
                                            <span tal:content="python:toLocalizedTime(item.start, time_only=1)">Start Time</span>
                                          </abbr >
                                          -
                                          <abbr i18n:name="endtime">
                                             <span tal:content="python:toLocalizedTime(item.end, time_only=1)">End Time</span>
                                          </abbr>
                                        </tal:sameday>
                                    </tal:restrict>
                                  </p>

                                   <div class="description">
                                    <span tal:condition="python:item_description != ''" tal:replace="python:item_description"></span>
                                   </div>
                                </div>
                                <div class="clearfix"></div>
                              </metal:block>                                          
                            </tal:block>     

                          </tal:results>
                        </div>
                        
                        <div class="col-lg-4 portlet-wrapper">
                        </div>
                      </div>

                      <div metal:use-macro="context/batch_macros/macros/navigation" />
                    </metal:results>
                  </div>
                </metal:searchresults>
              </div>

              <div class="clearfix"></div>
            </form>

          </div>

        </body>
      </html>
